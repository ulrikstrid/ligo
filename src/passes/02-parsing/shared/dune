;; Parsing as a library

(library
  (name parsing_shared)
  (public_name ligo.parsing.shared)
  (libraries
     ;; Vendors
     simple-utils
     Preprocessor
     ParserLib
     ;; LIGO
     lexing_shared
     cst_reasonligo
     ;; Third party
     getopt
     zarith
     str
     menhirLib
     terminal_size
     pprint)
  (modules
     Errors Formatter Common ParserMainGen)
  (preprocess
    (pps bisect_ppx --conditional)))
